generator client {
  provider = "prisma-client"
  output   = "../node_modules/@prisma/client/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum ApplicationStatus {
  NOT_APPLIED
  APPLIED
  INTERVIEW
  REJECTED
  OFFER
}

model Company {
  id               String        @id @default(cuid())
  name             String
  careersUrl       String
  targetRoles      String
  preferredLocation String       @default("Mumbai, India")
  logoUrl          String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  internships      Internship[]

  @@map("companies")
}

model Internship {
  id         String        @id @default(cuid())
  companyId  String
  title      String
  location   String
  dateFound  DateTime      @default(now())
  applyUrl   String
  notes      String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  company    Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  application Application?

  @@map("internships")
}

model Application {
  id              String            @id @default(cuid())
  internshipId    String            @unique
  status          ApplicationStatus @default(NOT_APPLIED)
  resumeVersion   String?
  referralDetails String?
  followUpDate    DateTime?
  notes           String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  internship      Internship        @relation(fields: [internshipId], references: [id], onDelete: Cascade)

  @@map("applications")
}

